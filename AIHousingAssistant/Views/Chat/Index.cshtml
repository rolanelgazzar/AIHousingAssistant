                // ========== INITIALIZATION ==========
                $(document).ready(function() {
                    addMessage("Hello! I am your smart assistant enhanced with RAG technology. Choose the settings and ask me any question! ", 'bot');
                    loadInitialQuestions();

                    // Send Button (Main)
                    $('#sendBtn').click(function() {
                        const message = $('#messageInput').val().trim();
                        if (!message) return;

                        if (currentMode === 'normal') {
                            askChatAI(message);
                        } else if (currentMode === 'planner') {
                            askChatAIPlanner(message);
                        } else if (currentMode === 'rag') {
                            askRag(message);
                        }


                        $('#messageInput').val('');
                    });

                    // Mode Buttons
                    $('#sendButton').click(function() {
                        currentMode = 'normal';
                        const message = $('#messageInput').val().trim();
                        if (!message) return;
                        askChatAI(message);
                        $('#messageInput').val('');
                    });

                    $('#sendPlannerButton').click(function() {
                        currentMode = 'planner';
                        const message = $('#messageInput').val().trim();
                        if (!message) return;
                        askChatAIPlanner(message);
                        $('#messageInput').val('');
                    });

                    $('#sendRagBtn').click(function() {
                        currentMode = 'rag';
                        const message = $('#messageInput').val().trim();
                        if (!message) return;
                        askRag(message);
                        $('#messageInput').val('');
                    });

                    // Enter key
                    $('#messageInput').keypress(function(e) {
                        if (e.key === 'Enter') {
                            $('#sendBtn').click();
                        }
                    });

                    // File Upload
                    $('#fileUpload').change(handleFileUpload);

                    // Load Summary
                    $('#loadSummaryBtn').click(loadSummary);
                });

                // ========== API CALLS ==========
                function askChatAI(message) {
                    addMessage(message, 'user');
                    showLoader();

                    $.ajax({
                        url: '/AskChatAI',
                        type: 'POST',
                        data: JSON.stringify(message),
                        contentType: 'application/json',
                        success: function(response) {
                            hideLoader();
                            addMessage(response.data || "لا توجد إجابة", 'bot');
                        },
                        error: function(xhr) {
                            hideLoader();
                            const error = (xhr.responseJSON && xhr.responseJSON.error) || xhr.responseText || "حدث خطأ في الاتصال";
                            addMessage("❌ " + error, 'bot');
                        }
                    });
                }

                function askChatAIPlanner(message) {
                    addMessage(message, 'user');
