              const data = response && response.data ? response.data : null;

              const answerText =
                (typeof data === 'string')
                  ? data
                  : (data && data.answer ? data.answer : "لم يتم العثور على إجابة");

              const chunkIndexes =
                (data && typeof data === 'object' && Array.isArray(data.chunkIndexes))
                  ? data.chunkIndexes
                  : [];

              const chunksHtml = chunkIndexes.length
                ? `<br><strong>📌 Chunk Indexes:</strong> <span style="direction:ltr;display:inline-block">${escapeHtml(chunkIndexes.join(', '))}</span>`
                : `<br><strong>📌 Chunk Indexes:</strong> <em>Not returned</em>`;

                

              const configInfo = `
        🔍 <strong>RAG Results</strong><br>
        📊 Used Settings:<br>
        • Vector Store: ${escapeHtml(getVectorStoreName(config.vectorStoreProvider))}<br>
        • Chunking: ${escapeHtml(getChunkingName(config.chunkingMode))}<br>
        • Embedding: ${escapeHtml(getEmbeddingName(config.embeddingModel))}<br>
        • Search Mode: ${escapeHtml(getSearchModeName(config.searchMode))}<br>
        • topSimilarity: ${escapeHtml(config.topSimilarity)}<br>
        • RAG Model: ${escapeHtml(getRagModelName(config.ragModel))}<br>
        ${chunksHtml}
        <br><br>
        <strong>Answer:</strong><br>${escapeHtml(answerText).replaceAll('\n', '<br>')}
              `;

              addMessage(configInfo, 'bot');
            },
            error: function (xhr) {
              hideLoader();
              const error =
                (xhr.responseJSON && (xhr.responseJSON.error || xhr.responseJSON.message))
                || xhr.responseText
                || "حدث خطأ في RAG";

              addMessage("❌ " + escapeHtml(error), 'bot');
            }
          });
        }
        



                // ========== FILE UPLOAD ==========
                function handleFileUpload(event) {
                    const file = event.target.files[0];
                    if (!file) return;

                    addMessage(`📄 Uploading file…: ${file.name}`, 'user');

                    const formData = new FormData();
          const config = {
            query: message,
            vectorStoreProvider: parseInt($('#vectorStoreProvider').val(), 10),
            chunkingMode: parseInt($('#chunkingMode').val(), 10),
            embeddingModel: parseInt($('#embeddingModel').val(), 10),
            searchMode: parseInt($('#searchMode').val(), 10),
            ragModel: parseInt($('#ragModel').val(), 10),

            topSimilarity:
              parseInt($('#searchMode').val(), 10) === 2
                ? 1
                : parseInt($('#topSimilarity').val(), 10)
          };
        

      
                    formData.append("file", file);
                    formData.append("config", JSON.stringify(config));

                    showLoader();
                    $.ajax({
                        url: '/UploadDocument',
                        type: 'POST',
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function(response) {
                            hideLoader();
        addMessage(`✅ "${file.name}" uploaded successfully!<br><br>✅ Processing and indexing completed successfully.`, 'bot');
                             },
                        error: function(xhr) {
                            hideLoader();
        const error = (xhr.responseJSON && xhr.responseJSON.error) || "File upload failed";
                                    addMessage("❌ " + error, 'bot');
                        }
                    });
                }

                // ========== INITIAL QUESTIONS ==========
                function loadInitialQuestions() {
                    $.ajax({
                        url: '/GetInitialQuestions',
                        type: 'GET',
                        success: function(response) {
                            if (response.success && response.data && response.data.length > 0) {
                                showInitialQuestions(response.data);
                            }
                        },
                        error: function() {
                            console.warn("Failed to load initial questions");
                        }
                    });
                }

                function showInitialQuestions(questions) {
                    const container = $('#initialQuestions');
                    container.empty();
                    questions.forEach(q => {
                        const btn = $(`<button class="question-btn">${q}</button>`);
                        btn.click(function() {
                            $('#messageInput').val(q);
                            $('#sendBtn').click();
                        });
                        container.append(btn);
                    });
                }

                // ========== LOAD SUMMARY ==========
                function loadSummary() {
        $('#summaryResult').html('<img src="/images/loader.gif" class="loader" />');


                    $.ajax({
                        url: '/SummarizationChatHistory',
                        type: 'GET',
                        success: function(response) {
                            if (response.success && response.summary) {
                                $('#summaryResult').html(`<div>${response.summary}</div>`);
                            } else {
                                $('#summaryResult').html('<p style="color: #fc8181;">لا يوجد ملخص متاح</p>');
                            }
                        },
                        error: function() {
                            $('#summaryResult').html('<p style="color: #fc8181;">حدث خطأ أثناء تحميل الملخص</p>');
                        }
                    });
                }

                // ========== UI HELPERS ==========
                function addMessage(text, sender) {
                    const time = new Date().toLocaleTimeString('ar-EG', { hour: '2-digit', minute: '2-digit' });
                    const isUser = sender === 'user';

                    const msgDiv = `
                        <div class="msg ${isUser ? 'right' : 'left'}-msg">
                            <div class="msg-img" style="background-image: url('${isUser ? imgPerson : imgBOT}')"></div>
                            <div class="msg-bubble">
                                <div class="msg-info">
                                    <div class="msg-info-name">${isUser ? namePerson : nameBOT}</div>
                                    <div class="msg-info-time">${time}</div>
                                </div>
                                <div class="msg-text">${text}</div>
                            </div>
                        </div>
                    `;

                    $('#chatBox').append(msgDiv);
                    $('#chatBox').scrollTop($('#chatBox')[0].scrollHeight);
                }

                function showLoader() {
                    addMessage('<img src="/images/loader.gif" class="loader"/>', 'bot');
                }

                function hideLoader() {
                    $('#chatBox .msg:last-child').remove();
                }

                // ========== HELPER FUNCTIONS ==========
                function getVectorStoreName(value) {
                    const names = [ 'Qdrant SDK', 'Qdrant Http','In-Memory'];
                    return names[value] || 'Unknown';
                }

                function getChunkingName(value) {
                    const names = [
                        'LangChain Recursive',
                         'Recursive Text Splitter',
                         'Semantic Text Blocks Grouper'
                     
                    ];
                    return names[value] || 'Unknown';
                }

                function getEmbeddingName(value) {
                    const names=[
                    'Nomic Embed Text',
                    'Text Embedding 3 small'
                    ];
                     return names[value] || 'Unknown';

                }
                function getSearchModeName(value) {
                  
                    const names=[

                    'Vector',
                    'Semantic',
                     'Hybrid'
                    ];
                     return names[value] || 'Unknown';

                }
                function getRagModelName(value) {

                    const names=[

                    'Ollama',
                    'Open AI',
                     
                    ];
                    
                     return names[value] || 'Unknown';

                }
                
